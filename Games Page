// You can add your game logic here.
// For example, you can create a canvas element and render a game using HTML5 canvas API.

// Sample code for rendering a simple game on canvas
const canvas = document.createElement("canvas");
const ctx = canvas.getContext("2d");
canvas.width = 800;
canvas.height = 400;
document.getElementById("game-container").appendChild(canvas);

function drawRect(x, y, width, height, color) {
    ctx.fillStyle = color;
    ctx.fillRect(x, y, width, height);
}

function gameLoop() {
    // Clear the canvas
    ctx.clearRect(0, 0, canvas.width, canvas.height);

    // Draw a rectangle as an example
    drawRect(50, 50, 100, 100, "blue");

    // Request animation frame to create a game loop
    requestAnimationFrame(gameLoop);
}

// Start the game loop
gameLoop();
